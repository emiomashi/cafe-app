<h1>New Cafe</h1>

<%= form_with model: @cafe do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @cafe.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
     <% @cafe.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

    <div>
    <%= form.label :rating %><br>
    <%= form.text_area :rating %>
     <% @cafe.errors.full_messages_for(:rating).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
